{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true, // Habilita todas as verificações de tipo estritas.
    "noImplicitAny": true, // Gera erro quando o tipo "any" é implicitamente inferido.
    "allowUmdGlobalAccess": true, // Permite o acesso global a módulos UMD (Universal Module Definition) no TypeScript.
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
    // "typeRoots": ["./node_modules/@types", "./types"], // Especifica os diretórios que contêm arquivos de declaração de tipo.
  }
  // "include": ["src", "types"] // Especifica quais arquivos e diretórios devem ser incluídos no processo de compilação.
}
